<% const existeMensaje = typeof mensaje!== "undefined"%>

<!--Etiqueta stile lee CSS -->
<style>
    table, th, td{
        border: 1px solid blue;
        border-collapse: collapse;
    }
</style>

<%if (existeMensaje){%>
    <p>MENSAJE: <%= mensaje%></p>
<%}%>

<!--Header 1 -->
<h1><%= usuario %></h1>  <!-- El igual es para mostrar algo -->
<% var bel = 'bel'%>
<!--Header 2 -->
<h2><%= bel%></h2>
<!-- ul Listar cosas sin orden(unordered)    =! ol(ordered) -->
<!--li list item -->
<% if(booleano){%>
<p> Usted creo una noticia</p>
<% }%>
<!-- a anchor ancla -->
<a href="/crear-noticia">
    <button> Crear noticia</button>
</a>


<table>
    <!-- tr -> table row -->
    <tr>
        <!-- th -> table header -->
        <th>Identicador</th>
        <th>Nombre</th>
        <th>Acciones</th>
    </tr>
    <!-- tr -> table row -->
    <% arreglo.forEach( (noticia)=> { %>
        <tr>
            <!-- td -> table detail -->
            <td><%= noticia.titulo %></td>
            <td><%= noticia.descripcion %></td>
            <td>
                <form action="/eliminar/<%= noticia.id %>" method="POST">
                    <!--<button type="button"> clickea sin problemas</button>
                    <button>Yo tambien envio informacion</button>
                    -->
                    <button type="submit"> Eliminar</button>
                </form>
                <a href="/actualizar-noticia/<%= noticia.id%>">
                    <button>Actualizar</button>
                </a>
            </td>
        </tr>
    <% }) %>
</table>

